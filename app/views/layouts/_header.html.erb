<header>
  <h1 id="logo"><%= link_to "Impressions", root_path %></h1>
  <div>
    <ul class="main-nav">
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "About", '#' %></li>
      <li><%= link_to "Contact", '#' %></li>
    </ul>
    <% if logged_in? %>
      <div class="header-icon"><%= link_to gravatar_for(current_user), current_user %></div>
    <% else %>
      <div class="header-icon"><%= link_to image_tag("non-login-icon.png"), login_url %></div>
    <% end %>
  </div>
</header>