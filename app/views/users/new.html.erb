<h1>Sign up</h1>

<%= render 'shared/error_messages' %>
<%= form_for(@user) do |f| %>
  <div class="form">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="form">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="form">
    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation %>
  </div>
  <%= f.submit "Create my account", class: "btn btn-design" %>
  
<% end %>